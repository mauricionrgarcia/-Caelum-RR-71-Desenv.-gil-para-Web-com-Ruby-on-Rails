<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Years old</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.years_old %></td>
        <td><%= link_to 'Show', client, class: 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_client_path(client), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path, class: 'btn btn-success' %>
