<h1>
  <p>Name: </p>
  <%= @restaurant.name %>
</h1>

<p>
  <b>Address:</b>
  <%= @restaurant.address %>
</p>

<p>
  <b>Specialty: </b>
  <%= @restaurant.specialty %>
</p>

<p>
  <b>Average rating: </b>
  <%= @restaurant.qualifications.average(:note) %>
</p>

<p>
  <b>How many qualifications: </b>
  <%= @restaurant.qualifications.count%>
</p>

<p>
  <b>Average price: </b>
  <%= @restaurant.qualifications.average(:amount_spent) %>
</p>


<%= link_to "New Qualification", controller: "qualifications",
                                 action: "new",
                                 restaurant: @restaurant %>

<%= link_to 'Back', action: 'index' %>
<%= link_to 'Edit', action: 'edit', id: @restaurant %>
